@inject Microsoft.AspNetCore.Identity.SignInManager<SchoolManagement.Models.ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
<form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
    <ul class="nav navbar-nav">
        <li class="text-black nav-link">Hello  @User.Identity.Name! </li>
        <li><a class="text-black nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
</form>
}
else 
{
<ul class="nav navbar-nav">
    <li>
        @*@Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { Id = "registerLink" })*@
        <a class="nav-link text-dark" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li>
        @*@Html.ActionLink("Sign In", "Login", "Account", routeValues: null, htmlAttributes: new { Id = "registerLink" })*@
        <a class="nav-link text-dark" id="registerLink" asp-controller="Account" asp-action="Login">Sign In</a>
    </li>
</ul>
}